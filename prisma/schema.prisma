// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_POSTGRES")
}

enum Role {
  admin
  user
}

model Profile {
  id    String  @id @db.Uuid
  role  Role    @default(user)
  isNew Boolean @default(true) @map("isnew")

  // More fields...

  @@map("profile")
}

model Equipment {
  id            String      @id @unique @default(nanoid(7))
  name          String
  model         String
  description   String      @db.VarChar(2500)
  image         String
  instances     EInstances[]
  eCategoriesId String
  category      ECategories @relation(fields: [eCategoriesId], references: [id], onDelete: Cascade)
  // videos
}

enum EStatus {
  available
  inUse       @map("in_use")
  maintenance
  broken
}

model EInstances {
  id          String   @id @unique @default(nanoid(7))
  name        String
  description String   @db.VarChar(2500)
  status      EStatus? @default(available)
  cost        String
  // manuals

  equipment Equipment @relation(fields: [id], references: [id])
}

model ECategories {
  id   String @id @unique @default(nanoid(7))
  name String

  equipment Equipment[]
}

model RepoElectronics {
  id          String  @id @unique @default(nanoid(7))
  name        String
  model       String
  loanedQty   Int
  image       String
  description String? @db.VarChar(255)
}

model RepoMaterials {
  id         String @id @unique @default(nanoid(7))
  name       String
  quantity   Int
  dimensions Json   @db.Json
  // { type: DType, value: number, unit: DUnit }[]

  description String? @db.VarChar(255)
}
